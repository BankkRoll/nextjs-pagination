    "prettier": "^3.0.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "next": "^13.4.3",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
